@article{DEBADARSHINI2024103345,
  title = {iCoord: Efficient charging of the Electric-Vehicles through IoT-assisted coordination with the charging-infrastructure},
  journal = {Ad Hoc Networks},
  volume = {153},
  pages = {103345},
  year = {2024},
  issn = {1570-8705},
  doi = {https://doi.org/10.1016/j.adhoc.2023.103345},
  url = {https://www.sciencedirect.com/science/article/pii/S1570870523002652},
  author = {Jagnyashini Debadarshini and Rejeti Megha Vardhan and Sudipta Saha and Chandrashekhar N. Bhende},
  keywords = {EV, CS, Synchronous-Transmission, IoT},
  abstract = {Electric-Vehicles (EVs) will play an increasingly important role as a mode of transportation in the near future. However, due to the rapid increase in the number of EVs, and relatively slow development of the necessary charging infrastructure, practical and effective use of the EVs may get highly limited. Coordination among the Charging-Stations (CSs) and the EVs is one of the essential components for maximizing the use of the limited available charging infrastructure. Currently, any such coordination is handled by centralized cloud-assisted strategies. In light of the rapid increase in the number of EVs and the potential single-point-of-failure related issues in centralized solutions, this paper introduces a decentralized IoT-based framework iCoord for the EV–CS coordination for efficient charge scheduling of the EVs. The framework leverages recent advancements in Synchronous-Transmission (ST)-based communication to facilitate efficient on-the-fly data-sharing among the EVs and CSs. Especially, iCoord utilizes both EV–EV and EV–CS coordination to improve the system’s efficiency. Through extensive simulation based studies we demonstrate that the strategy enables efficient charging of the EVs while maintaining a well-balanced distribution of the load over the CSs which is a significant factor in the overall performance of an EV-based transportation system.}
}

@article{VARONE2024113845,
  title = {Solar parking lot management: An IoT platform for smart charging EV fleets, using real-time data and production forecasts},
  journal = {Renewable and Sustainable Energy Reviews},
  volume = {189},
  pages = {113845},
  year = {2024},
  issn = {1364-0321},
  doi = {https://doi.org/10.1016/j.rser.2023.113845},
  url = {https://www.sciencedirect.com/science/article/pii/S1364032123007037},
  author = {Alberto Varone and Zeno Heilmann and Guido Porruvecchio and Alessandro Romanino},
  keywords = {Electric vehicle, Photovoltaic, Smart charging, Mobility, Renewable energy, Internet of Things},
  abstract = {The fast transition to the electrification of the energy system, combined with an exponential growth of the market share of electric vehicles, is leading to a tight interrelation between electric energy production and transportation, two prominent sectors in fossil fuels consumption and greenhouse gas emissions. Accelerating this process, the management of electric fluxes, aiming at optimizing production and demand coupling, plays a crucial role in reaching the net-zero emission target. The proposed software platform is designed to optimally manage the energy fluxes for a solar powered parking lot, serving a fleet of electric vehicles; the real-time knowledge of energy production and demand, in conjunction with forecasted power generation, allows the maximization of renewable energy self-consumption, thus reducing the exchange with the external grid. The software platform can work either in design mode, allowing the dimensioning of the various parking lot components, or in real-time mode managing instantaneously the energy balance. As a case study, it is tested on the 2019 parking lot mobility data of a research center, assuming a complete transformation of the then existing fleet of employees' cars to electric vehicles. A comparison of the resulting energy flows with those projected by an established commercial tool is performed, as well as a preliminary economic evaluation. Both consistency of the simulation results and favorable economics validate the presented smart charging algorithm and Internet of Things platform for the real-time energy management of a solar parking lot.}
}

